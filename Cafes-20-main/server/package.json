{
  "name": "himalayan-pizza-backend",
  "version": "1.0.0",
  "description": "Backend API for The Himalayan Pizza",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child --ignore-watch node_modules src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "install-deps": "node install.js",
    "seed:admin": "ts-node src/scripts/seedAdmin.ts",
    "db:seed": "npm run seed:admin",
    "db:init": "ts-node src/scripts/initDatabase.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "mongodb",
    "jwt",
    "authentication",
    "multer",
    "cloudinary",
    "socket.io"
  ],
  "author": "The Himalayan Pizza",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "cloudinary": "^1.41.0",
    "socket.io": "^4.7.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5"
  }
}